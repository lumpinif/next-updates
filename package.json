{
  "name": "review-deps",
  "type": "module",
  "version": "0.0.0",
  "description": "Evidence-driven dependency upgrade assistant for Node.js projects.",
  "author": "@felixlu1018",
  "license": "MIT",
  "homepage": "https://github.com/lumpinif/review-deps#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumpinif/review-deps.git"
  },
  "bugs": {
    "url": "https://github.com/lumpinif/review-deps/issues"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "bin": {
    "review-deps": "./dist/bin.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky",
    "format": "pnpm dlx ultracite fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^25.0.3",
    "bumpp": "^10.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "ultracite": "6.4.2",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  }
}
